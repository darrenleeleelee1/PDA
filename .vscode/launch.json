            "cwd": "${workspaceFolder}/Lab3/",
            "environment": [],
            
        },
        {
            "name": "(gdb) Lab3",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Lab3/Lab3",
            "args": ["./testcase/case3.txt", "./out/case3.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Lab3/",
            "preLaunchTask": "build",
            "MIMode": "gdb",
            "setupCommands": [
